{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "TURBO_TELEMETRY_DISABLED",
    "NEXT_TELEMETRY_DISABLED",
    "DOTENV_PRIVATE_KEY",
    "DOTENV_PUBLIC_KEY_DEVELOPMENT",
    "DOTENV_PRIVATE_KEY_DEVELOPMENT",
    "DOTENV_PUBLIC_KEY_PRODUCTION",
    "DOTENV_PRIVATE_KEY_PRODUCTION",
    "OPENAI_API_KEY",
    "OPENPANEL_CLIENT_ID",
    "OPENPANEL_SECRET_KEY",
    "BETTER_AUTH_SECRET",
    "DATABASE_URL",
    "RESEND_API_KEY"
  ],
  "ui": "tui",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env.development"],
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env.production"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        ".react-email/**",
        "!.react-email/.next/cache/**",
        "dist/**"
      ]
    },
    "start": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^topo"]
    },
    "typecheck": {
      "dependsOn": ["^topo"]
    }
  }
}
